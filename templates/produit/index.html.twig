{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

     <ul>
        {% for produit in produits %}
            <li>
                
                <h2>{{ produit.nom |upper }}</h2>
<p>date: {{ produit.dateCreation | date("m/d/Y") }}</p>
                <p>prix: {{ produit.prix }}</p>
                <p>Boutique: {{ produit.boutique.nom }}</p>

                
                 
                    <a href="{{path('app_produit_modifier',{ id: produit.id })}}">Update</a>
                    <a href="{{path('app_produit_supprimer',{ id: produit.id })}}">Delete</a>    
                    <a href="{{path('app_produit_details',{ id: produit.id })}}">Details</a>    

            </li>
        {% else %}
            <li>No authors available.</li>
        {% endfor %}
    </ul>
        <a href="{{path('app_produit_ajout')}}">Ajouter nouvau boutique</a>    

 <h3>Filter by Price Range</h3>
    <form action="{{ path('app_produit_filter') }}" method="GET">
        <label for="minPrice">Min Price:</label>
        <input type="number" name="minPrice" id="minPrice" step="0.01" required>

        <label for="maxPrice">Max Price:</label>
        <input type="number" name="maxPrice" id="maxPrice" step="0.01" required>

        <button type="submit">Filter</button>
    </form>

</div>
{% endblock %}
