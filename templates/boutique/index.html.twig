{% extends 'base.html.twig' %}


{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

     <ul>
        {% for boutique in boutiques %}
            <li>
                
                <h2>{{ boutique.nom |upper }}</h2>
                <p>Adresse: {{ boutique.adresse }}</p>
                
                                    <a href="{{path('app_boutique_details',{ id: boutique.id })}}">Details</a>    

                 
                    <a href="{{path('app_boutique_modifier',{ id: boutique.id })}}">Update</a>
                    <a href="{{path('app_boutique_supprimer',{ id: boutique.id })}}">Delete</a>    
            </li>
        {% else %}
            <li>No authors available.</li>
        {% endfor %}
    </ul>
        <a href="{{path('app_boutique_ajout')}}">Ajouter nouvau boutique</a>    

</div>
{% endblock %}
